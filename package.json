{
  "name": "react-auto-intl",
  "version": "0.0.0",
  "description": "Automated internationalization for React applications",
  "main": "dist/module/index.js",
  "types": "dist/module/index.d.ts",
  "bin": "dist/cli/index.js",
  "scripts": {
    "prepublish": "npm run test && ./scripts/dist",
    "dist": "./scripts/dist",
    "ts-node": "ts-node",
    "test-cli": "npm run ts-node -- src/cli/index.ts 'test-files/**/*.@(ts|tsx)'",
    "lint": "tslint --project tsconfig.json '@(src|tests|types|docs|test-files)/**/*.@(ts|tsx)'",
    "tests": "jest",
    "test": "npm run lint && npm run tests -- --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakesidsmith/react-auto-intl.git"
  },
  "keywords": [
    "react",
    "internationalization",
    "translate",
    "translation",
    "auto",
    "automated"
  ],
  "author": "Jake 'Sid' Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jakesidsmith/react-auto-intl/issues"
  },
  "homepage": "https://github.com/jakesidsmith/react-auto-intl#readme",
  "dependencies": {
    "@types/acorn": "4.0.3",
    "@types/glob": "5.0.33",
    "@types/lodash": "4.14.85",
    "@types/node": "8.0.53",
    "acorn": "5.2.1",
    "glob": "7.1.2",
    "jargs": "0.3.3",
    "lodash": "4.17.4",
    "typescript": "2.6.1"
  },
  "devDependencies": {
    "@types/jest": "20.0.3",
    "@types/react": "16.0.25",
    "@types/react-dom": "16.0.3",
    "jest": "20.0.4",
    "react": "16.1.1",
    "react-dom": "16.1.1",
    "ts-jest": "20.0.14",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-eslint-rules": "4.1.1",
    "tslint-react": "3.2.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/helpers/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "types/.*\\.d\\.ts",
      "tests/helpers/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "testPathIgnorePatterns": [
      "tests/helpers/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "mapCoverage": true
  }
}
